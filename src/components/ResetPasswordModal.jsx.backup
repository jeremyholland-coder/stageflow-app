import React, { useState, useEffect, useRef } from 'react';
import { X, Loader, RefreshCw } from 'lucide-react';

/**
 * Reset Password Modal
 *
 * Shows when user clicks password reset link from email.
 * Prompts user to enter new password.
 * Styled to match StageFlow's dark theme.
 */
export default function ResetPasswordModal({ isOpen, onClose, onSuccess, session }) {
  const [newPassword, setNewPassword] = useState('');
  const [confirmPassword, setConfirmPassword] = useState('');
  const [loading, setLoading] = useState(false);
  const [error, setError] = useState('');
  const [tokenExpired, setTokenExpired] = useState(false);

  // APPLE-QUALITY FIX: Track if session was ever valid to prevent false errors
  const sessionWasValid = useRef(false);

  // APPLE-QUALITY FIX: Continuously validate session (reactive to changes)
  useEffect(() => {
    if (!isOpen) {
      // Reset state when modal closes
      sessionWasValid.current = false;
      setTokenExpired(false);
      setError('');
      return;
    }

    // CRITICAL FIX: React to session changes immediately
    // If session becomes valid, clear any errors
    if (session?.access_token) {
      sessionWasValid.current = true;
      setError(''); // Clear error as soon as session is valid

      console.warn('[ResetPasswordModal] Session validated successfully:', {
        hasAccessToken: true,
        tokenLength: session.access_token.length,
        hasUser: !!session.user
      });
    }
    // Don't show error immediately - wait for user to submit
    // This prevents false errors during React state propagation
  }, [isOpen, session]);

  const handleSubmit = async (e) => {
    e.preventDefault();

    // APPLE-QUALITY FIX: Prevent duplicate submissions during loading
    if (loading) {
      console.warn('[ResetPasswordModal] Submit blocked - already processing');
      return;
    }

    setError('');

    // PRE-VALIDATION: Check session before attempting password reset
    if (!session) {
      setError('Session expired. Please request a new password reset link.');
      return;
    }

    if (!session.access_token) {
      setError('Invalid session. Please request a new password reset link.');
      console.error('[ResetPasswordModal] Missing access_token in session:', session);
      return;
    }

    // APPLE-QUALITY: Disable browser validation errors by checking programmatically
    // This prevents "Fill required fields" browser popup
    if (!newPassword || !confirmPassword) {
      setError('Please enter your new password in both fields');
      return;
    }

    // Validate passwords
    if (newPassword.length < 8) {
      setError('Password must be at least 8 characters');
      return;
    }

    if (newPassword !== confirmPassword) {
      setError('Passwords do not match');
      return;
    }

    // SECURITY: Check for password strength
    // CRITICAL FIX: Must match signup requirements (uppercase + lowercase + number + special char)
    const hasUpperCase = /[A-Z]/.test(newPassword);
    const hasLowerCase = /[a-z]/.test(newPassword);
    const hasNumber = /[0-9]/.test(newPassword);
    const hasSpecialChar = /[^A-Za-z0-9]/.test(newPassword);

    if (!hasUpperCase || !hasLowerCase || !hasNumber || !hasSpecialChar) {
      setError('Password must contain uppercase, lowercase, number, and special character (!@#$%^&*)');
      return;
    }

    setLoading(true);

    try {
      // Use backend endpoint to update password with the recovery session
      const response = await fetch('/.netlify/functions/auth-reset-password', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        credentials: 'include',
        body: JSON.stringify({
          newPassword,
          accessToken: session?.access_token // Use token from recovery session
        })
      });

      const data = await response.json();

      if (!response.ok) {
        // APPLE-QUALITY: Better error handling for common issues
        if (data.error?.includes('expired') || data.error?.includes('invalid')) {
          setTokenExpired(true);
          setError('Your password reset link has expired. Please request a new one.');
        } else {
          throw new Error(data.error || 'Failed to update password');
        }
        return;
      }

      // APPLE-QUALITY FIX: Clear sensitive data from memory immediately
      setNewPassword('');
      setConfirmPassword('');

      // Success!
      onSuccess();
      onClose();

    } catch (err) {
      console.error('Password update failed:', err);

      // APPLE-QUALITY: User-friendly error messages
      if (err.message?.includes('fetch')) {
        setError('Network error. Please check your connection and try again.');
      } else if (err.message?.includes('timeout')) {
        setError('Request timed out. Please try again.');
      } else {
        setError(err.message || 'Failed to update password. Please try again.');
      }
    } finally {
      setLoading(false);
    }
  };

  // APPLE-QUALITY FIX: Handle "Request New Link" action
  const handleRequestNewLink = () => {
    // Close modal and clear state
    setNewPassword('');
    setConfirmPassword('');
    setError('');
    setTokenExpired(false);
    onClose();

    // Redirect to login page where they can request new reset link
    window.location.href = '/login';
  };

  if (!isOpen) return null;

  return (
    <div className="fixed inset-0 bg-black/95 backdrop-blur-sm z-50 flex items-center justify-center p-4 animate-fadeIn">
      <div className="bg-gradient-to-br from-gray-900 to-black border border-teal-500/30 rounded-2xl p-4 sm:p-8 max-w-md w-full max-h-[90vh] overflow-y-auto shadow-2xl animate-slideUp">
        {/* Header */}
        <div className="flex items-center justify-between mb-6">
          <h2 className="text-2xl font-bold text-white">
            Set New Password
          </h2>
          <button
            onClick={onClose}
            className="min-w-touch min-h-touch flex items-center justify-center text-gray-400 hover:text-white rounded-lg transition"
            aria-label="Close modal"
          >
            <X className="w-5 h-5" />
          </button>
        </div>

        <p className="text-gray-400 mb-6">
          Enter a strong password to secure your account.
        </p>

        <form onSubmit={handleSubmit} className="space-y-4" noValidate>
          {error && (
            <div className="bg-red-500/10 border border-red-500/30 text-red-400 rounded-xl p-3 text-sm">
              {error}
            </div>
          )}

          <div>
            <label htmlFor="newPassword" className="block text-sm font-medium text-white mb-2">
              New Password
            </label>
            <input
              type="password"
              id="newPassword"
              value={newPassword}
              onChange={(e) => setNewPassword(e.target.value)}
              className="w-full px-4 py-3 bg-gray-800/50 border border-gray-700 rounded-xl text-white placeholder-gray-400 focus:ring-2 focus:ring-teal-500 focus:border-transparent transition"
              placeholder="Enter new password"
              minLength={8}
              disabled={loading || tokenExpired}
              autoFocus
              aria-invalid={error ? 'true' : 'false'}
              aria-describedby="password-requirements"
            />
            <p id="password-requirements" className="text-xs text-gray-500 mt-1">
              Must be at least 8 characters with uppercase, lowercase, number, and special character
            </p>
          </div>

          <div>
            <label htmlFor="confirmPassword" className="block text-sm font-medium text-white mb-2">
              Confirm Password
            </label>
            <input
              type="password"
              id="confirmPassword"
              value={confirmPassword}
              onChange={(e) => setConfirmPassword(e.target.value)}
              className="w-full px-4 py-3 bg-gray-800/50 border border-gray-700 rounded-xl text-white placeholder-gray-400 focus:ring-2 focus:ring-teal-500 focus:border-transparent transition"
              placeholder="Confirm new password"
              minLength={8}
              disabled={loading || tokenExpired}
              aria-invalid={error ? 'true' : 'false'}
            />
          </div>

          {tokenExpired ? (
            // APPLE-QUALITY: Show "Request New Link" button when token expires
            <div className="flex gap-3 pt-4">
              <button
                type="button"
                onClick={onClose}
                className="flex-1 px-4 py-3 border border-gray-700 text-gray-400 hover:text-white rounded-xl hover:bg-gray-800/50 transition min-h-touch"
              >
                Cancel
              </button>
              <button
                type="button"
                onClick={handleRequestNewLink}
                className="flex-1 bg-teal-500 hover:bg-teal-600 text-white px-4 py-3 rounded-xl font-semibold transition flex items-center justify-center gap-2 min-h-touch shadow-lg shadow-teal-500/20 hover:shadow-teal-500/40 hover:scale-[1.02] active:scale-[0.98]"
              >
                <RefreshCw className="w-5 h-5" />
                Request New Link
              </button>
            </div>
          ) : (
            // Normal submit buttons
            <div className="flex gap-3 pt-4">
              <button
                type="button"
                onClick={onClose}
                className="flex-1 px-4 py-3 border border-gray-700 text-gray-400 hover:text-white rounded-xl hover:bg-gray-800/50 transition min-h-touch"
                disabled={loading}
              >
                Cancel
              </button>
              <button
                type="submit"
                disabled={loading}
                className="flex-1 bg-teal-500 hover:bg-teal-600 text-white px-4 py-3 rounded-xl font-semibold transition disabled:opacity-50 flex items-center justify-center gap-2 min-h-touch shadow-lg shadow-teal-500/20 hover:shadow-teal-500/40 hover:scale-[1.02] active:scale-[0.98]"
              >
                {loading ? (
                  <>
                    <Loader className="w-5 h-5 animate-spin" />
                    Updating...
                  </>
                ) : (
                  'Update Password'
                )}
              </button>
            </div>
          )}
        </form>
      </div>
    </div>
  );
}
